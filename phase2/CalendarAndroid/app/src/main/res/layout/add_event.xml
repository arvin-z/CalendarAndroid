<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="156dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/hourbutton"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:text="@string/add_alert_hourly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventdescription" />

    <CheckBox
        android:id="@+id/daybutton"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:text="@string/add_alert_daily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourbutton" />

    <CheckBox
        android:id="@+id/weekbutton"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginStart="68dp"
        android:text="@string/add_alert_weekly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daybutton" />

    <Button
        android:id="@+id/addeventbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="44dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventtags"
        app:layout_constraintVertical_bias="0.981" />

    <EditText
        android:id="@+id/eventname"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/add_event_name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton" />

    <EditText
        android:id="@+id/eventdescription"
        android:layout_width="252dp"
        android:layout_height="78dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"

        android:text="Add a description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/eventtags"
        android:layout_width="126dp"
        android:layout_height="146dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/add_tags"

        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toEndOf="@+id/daybutton"
        app:layout_constraintTop_toBottomOf="@+id/eventdescription"
        app:layout_constraintVertical_bias="0.153" />

    <EditText
        android:id="@+id/starttime"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Start date (YYYY-MM-DDTHH:MM)"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="179dp" />

    <EditText
        android:id="@+id/endtime"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="End date (YYYY-MM-DDTHH:MM)"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="236dp" />

</androidx.constraintlayout.widget.ConstraintLayout>